
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read/write their own files in a dedicated folder.
    // The path must match `users/{userId}/<some_file_path>`
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null; // Allow any authenticated user to read images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
