rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow read and write for all authenticated users.
      // This is a simple rule for now. For more security, you can restrict
      // writes to specific paths, check file sizes, or content types.
      allow read, write: if request.auth != null;
    }
  }
}
