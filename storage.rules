rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // تأمين مسار رفع الصور الخاصة بالمواضيع
    match /users/{userId}/topics/{topicId}/{allPaths=**} {
      // فقط مالك الموضوع يمكنه الكتابة
      allow write: if request.auth != null && request.auth.uid == userId;
      // للسماح للجميع بالقراءة. لتقييد القراءة للمسجلين فقط، غيّرها إلى: request.auth != null
      allow read: if true;
    }

    // مثال لمسار صور رمزية للمستخدمين
    match /users/{userId}/avatar/{allPaths=**} {
       allow write: if request.auth != null && request.auth.uid == userId;
       allow read: if true; // عامة للجميع، أو request.auth != null للمسجلين فقط
    }

    // منع الوصول إلى جميع المسارات الأخرى
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
