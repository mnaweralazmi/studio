
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Secure rule: Allow users to write only to their own folder.
    // The client-side code MUST upload files to a path like `users/{uid}/{filename}`
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
