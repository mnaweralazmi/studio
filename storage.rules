rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to everyone for general images (e.g., topic images)
    match /images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null; // Or more specific admin rules
    }

    // Allow authenticated users to read and write to their own avatar folder
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true; // Avatars are often public
      allow write: if request.auth.uid == userId;
    }
  }
}
