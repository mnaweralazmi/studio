rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow any authenticated user to read and write files.
    // This is a simpler rule to ensure functionality.
    // We secure access to the file URLs in Firestore rules.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
