rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Secure rule: Users can only write to their own folder within 'users'.
    // They can only upload files smaller than 5MB.
    // Anyone authenticated can read files (to see other users' topic images).
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId &&
                       request.resource.size < 5 * 1024 * 1024;
    }
  }
}
