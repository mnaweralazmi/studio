rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Only allow authenticated users to write files.
    // Files are stored in a folder named after the user's ID.
    // A user can only write to their own folder.
    // Any authenticated user can read files (e.g., to see other users' topic images).
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
