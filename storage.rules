rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // مستند المستخدم نفسه
    match /users/{userId} {
      allow get, create, delete: if request.auth != null && request.auth.uid == userId;
      allow update: if false;
      allow list: if false;
    }

    // كل الساب-كلكشنز الخاصة بالمستخدم (مثل topics)
    match /users/{userId}/{document=**} {
      allow get, list, create, delete: if request.auth != null && request.auth.uid == userId;
      allow update: if false;
    }

    match /{document=**} { allow read, write: if false; }
  }
}
