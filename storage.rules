rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow write access on 'articles' folder for authenticated users
    // Users can only write to their own path
    match /articles/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read access on all files
    match /{allPaths=**} {
      allow read;
    }
  }
}
