// هذه القواعد تضمن:
// 1. أمان الرفع: المستخدم المسجل يمكنه فقط رفع الملفات إلى مجلده الخاص.
// 2. التحكم في القراءة: القراءة عامة بشكل افتراضي، ولكن يمكن تقييدها بسهولة.
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // === مسار رفع الملفات المتعلقة بالمواضيع ===
    // يسمح للمستخدم بالكتابة فقط داخل مجلده الخاص وضمن بنية محددة.
    match /users/{userId}/topics/{topicId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;

      // --- التحكم في القراءة ---
      // الوضع الحالي: القراءة عامة (أي شخص لديه الرابط يمكنه رؤية الملف).
      allow read: if true;
      // للتقييد (للمستخدمين المسجلين فقط)، غيّر السطر أعلاه إلى:
      // allow read: if request.auth != null;
    }

    // === مثال لمسار صور الأفاتار الشخصية ===
    // يسمح للمستخدم برفع وتحديث صورته الشخصية فقط.
    match /users/{userId}/avatar/{fileName} {
       allow write: if request.auth != null && request.auth.uid == userId;
       allow read: if true; // أو request.auth != null;
    }
  }
}
