rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // السماح للمستخدم فقط برفع الملفات في مساره الخاص
    // القراءة عامة للجميع، يمكن تقييدها للمستخدمين المسجلين فقط
    match /users/{userId}/topics/{topicId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      // لتقييد القراءة للمستخدمين المسجلين فقط، غيّر السطر التالي إلى:
      // allow read: if request.auth != null;
      allow read: if true;
    }

    // مثال لمسار صور المستخدم الشخصية
    match /users/{userId}/avatar/{allPaths=**} {
       allow write: if request.auth != null && request.auth.uid == userId;
       // لتقييد القراءة للمستخدمين المسجلين فقط، غيّر السطر التالي إلى:
       // allow read: if request.auth != null;
       allow read: if true;
    }

    // منع الوصول إلى جميع المسارات الأخرى بشكل افتراضي
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
