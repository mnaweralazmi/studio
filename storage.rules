rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // تنطبق هذه القاعدة على المجلدات التي تحمل اسم معرّف المستخدم داخل مجلد 'users'
    match /users/{userId}/{allPaths=**} {
      // السماح بالقراءة والكتابة فقط إذا كان المستخدم هو صاحب المجلد
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // قاعدة إضافية للسماح بقراءة المواضيع العامة من قبل أي مستخدم مسجل
    match /topics/{allPaths=**} {
       allow read: if request.auth != null;
    }
  }
}
