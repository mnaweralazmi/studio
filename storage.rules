
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Secure rule: Users can only write to a folder matching their UID.
    // The path in the client code must match this structure.
    // Example: users/{userId}/topics/{topicId}/{fileName}
    match /users/{userId}/{allPaths=**} {
      allow read; // Allow anyone to read files (e.g., to view images in posts)
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
