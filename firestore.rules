rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rule 1: Allow public read access to agricultural topics.
    // Writing is restricted to authenticated admins to allow for content management.
    match /topics/{topicId}/{path=**} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Rule 2: Secure user data.
    // Users can perform any action (read, write, delete) on their own data and all subcollections.
    // The {path=**} wildcard ensures this rule applies recursively to any depth.
    match /users/{userId}/{path=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
