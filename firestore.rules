rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
    }
    
    match /data/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /tasks/{taskId} {
      allow read, write: if request.auth.uid == resource.data.ownerId || isAdmin();
    }

    match /completed_tasks/{document=**} {
       allow read, write: if request.auth.uid == resource.data.ownerId || isAdmin();
    }

    function canAccessDepartmentData(departmentId) {
        return request.resource.data.ownerId == request.auth.uid || isAdmin();
    }

    function canQueryDepartmentData(departmentId) {
        return request.query.filters.find(f => f[0] == 'ownerId' && f[2] == request.auth.uid) != null || isAdmin();
    }
    
    // --- Agriculture ---
    match /agriculture_sales/{docId} {
      allow read: if canQueryDepartmentData('agriculture');
      allow write: if canAccessDepartmentData('agriculture');
    }
    match /agriculture_expenses/{docId} {
      allow read: if canQueryDepartmentData('agriculture');
      allow write: if canAccessDepartmentData('agriculture');
    }
    match /agriculture_debts/{docId} {
      allow read: if canQueryDepartmentData('agriculture');
      allow write: if canAccessDepartmentData('agriculture');
    }
    match /agriculture_workers/{docId} {
      allow read: if canQueryDepartmentData('agriculture');
      allow write: if canAccessDepartmentData('agriculture');
    }

    // --- Livestock ---
    match /livestock_sales/{docId} {
      allow read: if canQueryDepartmentData('livestock');
      allow write: if canAccessDepartmentData('livestock');
    }
    match /livestock_expenses/{docId} {
      allow read: if canQueryDepartmentData('livestock');
      allow write: if canAccessDepartmentData('livestock');
    }
    match /livestock_debts/{docId} {
      allow read: if canQueryDepartmentData('livestock');
      allow write: if canAccessDepartmentData('livestock');
    }
    match /livestock_workers/{docId} {
      allow read: if canQueryDepartmentData('livestock');
      allow write: if canAccessDepartmentData('livestock');
    }

    // --- Poultry ---
    match /poultry_sales/{docId} {
      allow read: if canQueryDepartmentData('poultry');
      allow write: if canAccessDepartmentData('poultry');
    }
    match /poultry_expenses/{docId} {
      allow read: if canQueryDepartmentData('poultry');
      allow write: if canAccessDepartmentData('poultry');
    }
    match /poultry_debts/{docId} {
      allow read: if canQueryDepartmentData('poultry');
      allow write: if canAccessDepartmentData('poultry');
    }
    match /poultry_workers/{docId} {
      allow read: if canQueryDepartmentData('poultry');
      allow write: if canAccessDepartmentData('poultry');
    }

    // --- Fish ---
    match /fish_sales/{docId} {
      allow read: if canQueryDepartmentData('fish');
      allow write: if canAccessDepartmentData('fish');
    }
    match /fish_expenses/{docId} {
      allow read: if canQueryDepartmentData('fish');
      allow write: if canAccessDepartmentData('fish');
    }
    match /fish_debts/{docId} {
