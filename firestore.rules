rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Rules for user-specific data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rules for public topics (from any user)
    match /{path=**}/topics/{topicId} {
       allow read: if resource.data.isPublic == true;
    }
    
    // Rules for the ad marquee
    match /siteContent/adMarquee {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == 'JU2IAJu8XEeCqM33bu1wzlrA7id2';
    }

    // Rules for general notifications
    // Allow read for 'all' or if user is the target, or if user is an admin and target is 'admin'
    match /{path=**}/notifications/{notificationId} {
      allow read: if resource.data.target == 'all' || 
                   (request.auth != null && resource.data.target == request.auth.uid) ||
                   (request.auth != null && resource.data.target == 'admin' && request.auth.uid in ['JU2IAJu8XEeCqM33bu1wzlrA7id2']);
      // Admins can create notifications
      allow create: if request.auth != null && request.auth.uid in ['JU2IAJu8
XEeCqM33bu1wzlrA7id2'];
      // Users can mark their own notifications as read
      allow update: if request.auth != null && request.auth.uid == resource.data.target; 
    }
  }
}
