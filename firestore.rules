rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow users to read/write their own data
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow logged-in users to read public topics from any user
    match /users/{userId}/topics/{topicId} {
      allow get: if request.auth != null && (resource.data.isPublic == true || request.auth.uid == userId);
      allow list: if request.auth != null && resource.data.isPublic == true;
    }

    // Allow anyone to read notifications, but only admins to create them
    match /notifications/{notificationId} {
        allow read: if true;
        allow create: if request.auth != null && request.auth.uid == 'JU2IAJu8XEeCqM33bu1wzlrA7id2';
    }

    // Allow anyone to read ad content, but only admin to write it
    match /siteContent/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == 'JU2IAJu8XEeCqM33bu1wzlrA7id2';
    }

  }
}
