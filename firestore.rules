rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rule 1: Allow public read access to agricultural topics
    // but restrict writing to authenticated admins.
    match /topics/{topicId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Rule 2: Secure user data
    // Users can read, write, update, and delete their own data and all subcollections.
    // The {path=**} wildcard ensures this rule applies recursively.
    match /users/{userId}/{path=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
