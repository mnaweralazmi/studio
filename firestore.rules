
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read their own user document and update it.
    // No one can list all users.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Any subcollections under a user's document can only be accessed by that user.
    // This secures all user-specific data like tasks, finances, etc.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // The 'data' collection is public and can be read by anyone.
    // No one can write to it directly from the client.
    match /data/{docId} {
        allow read: if true;
        allow write: if false;
    }
  }
}
