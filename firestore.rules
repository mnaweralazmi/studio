rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    function isAdmin() {
      return isSignedIn() && request.auth.uid in [
        'JU2IAJu8XEeCqM33bu1wzlrA7id2' // Admin UID
      ];
    }

    // --- Public Topics (Home Feed) ---
    match /publicTopics/{topicId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // --- Site Content (Ad Marquee) ---
    match /siteContent/adMarquee {
      allow read: if isSignedIn();
      // Allow admin to create the document if it doesn't exist, and update it if it does.
      allow create, update: if isAdmin(); 
    }

    // --- User-specific data ---
    match /users/{userId}/{document=**} {
        // Only the user themselves or an admin can access their own documents
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }
    
    // --- User Profile ---
    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // --- Notifications ---
    match /notifications/{notificationId} {
      // Allow admin to create notifications
      allow create: if isAdmin();
      // Users can read notifications targeted to them, 'all', or 'admin' if they are an admin
      allow read: if isSignedIn() && 
                    (resource.data.target == 'all' || 
                     resource.data.target == request.auth.uid ||
                     (resource.data.target == 'admin' && isAdmin()));
      // Allow users to update the 'read' status of their own notifications
      allow update: if isSignedIn() && request.resource.data.keys().hasOnly(['read']);
    }

  }
}
