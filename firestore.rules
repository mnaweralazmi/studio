// لتقييد قراءة المواضيع العامة للمستخدمين المسجلين فقط، قم بتغيير السطر "allow read: if resource.data.isPublic == true;"
// إلى "allow read: if resource.data.isPublic == true && request.auth != null;"

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // هذه القاعدة تسمح باستعلام collectionGroup على "topics" بالعمل
    // للمواضيع العامة فقط، وهو أمر ضروري لعرضها في الصفحة الرئيسية.
    match /{path=**}/topics/{topicId} {
      allow read: if resource.data.isPublic == true;
    }

    // هذه القاعدة تؤمن الوصول المباشر إلى مستندات المستخدم
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // هذه القاعدة تخصص صلاحيات دقيقة لمجموعة "topics" الفرعية
    match /users/{userId}/topics/{topicId} {
      // السماح بالقراءة إذا كان الموضوع عامًا، أو إذا كان المستخدم هو المالك
      allow read: if resource.data.isPublic == true || (request.auth != null && request.auth.uid == userId);
      
      // السماح بالكتابة (إنشاء، تحديث، حذف) فقط لمالك المستند
      allow write: if request.auth != null && request.auth.uid == userId;

      // شروط إضافية عند الإنشاء
      allow create: if request.auth != null 
                    && request.auth.uid == request.resource.data.userId
                    && request.resource.data.title is string
                    && request.resource.data.title.size() > 0;
    }
  }
}
