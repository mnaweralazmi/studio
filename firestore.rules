
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(data) {
      return request.auth.uid == data.ownerId;
    }
    
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create;
      allow update: if request.auth.uid == userId;
    }

    match /data/{document=**} {
      allow read: if true;
    }

    function financialDataAccess() {
      return {
        'read': request.auth.uid == resource.data.ownerId,
        'write': request.auth.uid == resource.data.ownerId,
        'create': request.auth.uid == request.resource.data.ownerId
      };
    }

    match /agriculture_sales/{docId} {
      allow read, write: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }
    match /agriculture_expenses/{docId} {
      allow read, write: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }
    match /agriculture_debts/{docId} {
      allow read, write: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }
    match /agriculture_workers/{docId} {
      allow read, write: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }

    match /livestock_sales/{docId} {
      allow read, write: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }
    match /livestock_expenses/{docId} {
      allow read, write: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }
    match /livestock_debts/{docId} {
      allow read, write: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }
    match /livestock_workers/{docId} {
      allow read, write: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }

    match /poultry_sales/{docId} {
      allow read, write: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }
    match /poultry_expenses/{docId} {
      allow read, write: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }
    match /poultry_debts/{docId} {
      allow read, write: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }
    match /poultry_workers/{docId} {
      allow read, write: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }

    match /fish_sales/{docId} {
      allow read, write: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }
    match /fish_expenses/{docId} {
      allow read, write: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }
    match /fish_debts/{docId} {
      allow read, write: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }
    match /fish_workers/{docId} {
      allow read, write: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }

    match /archive_sales/{docId} {
      allow read: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }
    match /archive_expenses/{docId} {
      allow read: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }
    match /archive_debts/{docId} {
      allow read: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }

    match /completed_tasks/{docId} {
      allow read: if financialDataAccess().read;
      allow create: if financialDataAccess().create;
    }
    
    match /tasks/{taskId} {
      allow read, write: if isOwner(resource.data);
      allow create: if isOwner(request.resource.data);
    }
  }
}
