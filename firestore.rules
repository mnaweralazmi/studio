rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to general app data
    match /data/{document=**} {
      allow read: if true;
      allow write: if false; // Protect public data from being written by clients
    }
    
    // Securely lock down user data
    match /users/{userId}/{document=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
