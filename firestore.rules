// هذه القواعد تضمن:
// 1. عزل بيانات المستخدمين: كل مستخدم يتحكم في بياناته فقط ضمن /users/{userId}.
// 2. عرض المواضيع العامة: تسمح لأي شخص بقراءة المواضيع التي تم تحديدها كـ "عامة" (isPublic == true) عبر collectionGroup.
// 3. أمان الإنشاء والتعديل: تفرض التحقق من هوية المستخدم عند إنشاء أو تعديل البيانات.
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // === قواعد خاصة بمستخدمين محددين ===
    // تضمن أن المستخدم لا يستطيع الوصول إلا إلى بياناته الخاصة.
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // === قواعد لمجموعة المواضيع العامة (Topics) ===
    // هذه القاعدة ضرورية لعمل استعلامات collectionGroup.
    match /{path=**}/topics/{topicId} {
      // السماح بالقراءة في حالتين:
      // 1. إذا كان الموضوع عامًا (isPublic == true).
      // 2. إذا كان المستخدم هو مالك الموضوع.
      allow read: if resource.data.isPublic == true || (request.auth != null && request.auth.uid == resource.data.userId);

      // السماح بالإنشاء فقط للمستخدمين المسجلين، مع التحقق من:
      // 1. أن المستخدم ينشئ الموضوع لنفسه (userId في المستند يطابق uid).
      // 2. أن العنوان موجود وهو نص.
      allow create: if request.auth != null 
                    && request.resource.data.userId == request.auth.uid
                    && 'title' in request.resource.data && request.resource.data.title is string
                    && request.resource.data.title.size() > 1;

      // السماح بالتحديث والحذف فقط لمالك الموضوع.
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
