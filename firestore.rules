// لتقييد القراءة للمسجلين فقط، غيّر `allow read` إلى `if request.auth != null;` في القواعد المناسبة.
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // السماح بقراءة المواضيع العامة للجميع، والسماح للمالك بالوصول الكامل
    match /users/{userId}/topics/{topicId} {
      allow read: if resource.data.isPublic == true || (request.auth != null && request.auth.uid == userId);
      allow create: if request.auth != null 
                    && request.auth.uid == request.resource.data.userId
                    && request.resource.data.title is string
                    && request.resource.data.title.size() > 1;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // السماح للمستخدم المسجل فقط بالوصول الكامل إلى بياناته الخاصة
    match /users/{userId}/{document=**} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // قاعدة ل collectionGroup على 'topics' للسماح بقراءة المواضيع العامة فقط
    match /{path=**}/topics/{topicId} {
      allow read: if resource.data.isPublic == true;
    }

  }
}
