
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down by default.
    match /{document=**} {
      allow read, write: if false;
    }
    
    // User profile documents
    match /users/{userId} {
      // Allow users to create their own profile, get it, or delete it.
      allow get, create, delete: if request.auth.uid == userId;
      // Disallow updates to the profile document from the client to prevent tampering with fields like 'role' or 'points'.
      allow update: if false;
      // Disallow listing all users for privacy.
      allow list: if false;
    }
    
    // Any subcollection under a user's document
    match /users/{userId}/{subcollection}/{docId} {
        // Allow full access only to the authenticated user who owns the subcollection.
        allow get, list, create, delete: if request.auth.uid == userId;
        // Disallow updates based on the provided rules.
        allow update: if false;
    }
  }
}
