rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // القاعدة الأساسية: السماح للمستخدمين بقراءة وكتابة بياناتهم الخاصة فقط
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // القاعدة الجديدة: السماح لأي شخص بقراءة المواضيع العامة
    // هذا يسمح لـ collectionGroup query بالعمل على المواضيع التي تحمل علامة 'isPublic'
    match /{path=**}/topics/{topicId} {
      allow read: if resource.data.isPublic == true;
      
      // السماح للمالك فقط بالتعديل والحذف
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // القاعدة القديمة: هذه القاعدة كانت تحد من الوصول وتمنع collectionGroup
    // match /users/{userId}/topics/{topicId} {
    //  allow create: if request.auth != null && request.auth.uid == userId;
    //  allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
