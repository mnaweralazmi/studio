rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to general app data
    match /data/{document=**} {
      allow read: if true;
      allow write: if false; // Protect public data from client writes
    }

    // Allow any authenticated user to manage their own user document
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Secure all user-specific data collections (tasks, sales, etc.)
    // This rule requires that any document in a top-level collection has an ownerId
    // that matches the authenticated user's UID for all operations.
    match /{collection}/{docId} {
       allow read, update, delete: if request.auth.uid == resource.data.ownerId;
       allow create: if request.auth.uid == request.resource.data.ownerId;
    }
  }
}
