rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. User can only read/write their own document and subcollections
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 2. Public topics are read-only for everyone
    match /public_topics/{topicId} {
        allow read: if true;
        allow write: if false; // No one can write directly
    }

    // 3. Explicitly deny access to the root users collection
    match /users/{userId} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
