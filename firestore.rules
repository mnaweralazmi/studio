
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow users to read and create topics if they are authenticated
    match /topics/{topicId} {
      allow read, create: if request.auth != null;
      
      // Allow users to update or delete their own topics
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
    
    // Rules for user-specific data
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for public notifications
    match /notifications/{notificationId} {
        allow read: if request.auth != null;
        // For admin-only writes, you would typically use custom claims or a list of admin UIDs.
        // This is a basic setup.
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
