rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow public read access to the agricultural topics
    match /data/{document=**} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write for now
    }

    // Secure user-specific data
    match /users/{userId}/{document=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
