rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: Allow users to read/update their own data
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Topics collection:
    // Allow any authenticated user to read and create topics
    // Allow users to update or delete only their own topics
    match /topics/{topicId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
    
    // Notifications collection: 
    // Allow users to read notifications targeted to them or 'all'
    // For simplicity, only allow creation from server-side/admin SDK for now.
    match /notifications/{notificationId} {
       allow read: if request.auth != null && (resource.data.target == request.auth.uid || resource.data.target == 'all');
       allow write: if false; // Secure: prevent client-side writes
    }
    
    // Subcollections for farm management, tasks, etc.
    // General rule: user can only access their own documents.
    match /users/{userId}/{collection}/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
