
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for user-specific data
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for topics
    match /topics/{topicId} {
      // Any authenticated user can read topics
      allow read: if request.auth != null;

      // An authenticated user can create a topic, but only if they are the owner.
      // This is the key fix.
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;

      // A user can update or delete a topic only if they are the owner
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // Rules for notifications
    match /notifications/{notificationId} {
      // Allow authenticated users to read notifications
      allow read: if request.auth != null;
    }
  }
}
