
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read-only access to agricultural topics
    match /public_topics/{topicId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write (for admin/future use)
    }

    // Protect user-specific data
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Explicitly deny access to the top-level 'users' collection for queries
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
