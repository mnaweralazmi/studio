
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Topics Collection
    match /topics/{topicId} {
      // Allow any authenticated user to read topics.
      allow read: if request.auth != null;

      // Allow creating a topic only if the user is authenticated and the ownerId matches their UID.
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;

      // Allow updating a topic (e.g., to add imageUrl) only by the owner.
      allow update: if request.auth != null && resource.data.ownerId == request.auth.uid;
      
      // Allow deleting a topic only by the owner.
      allow delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // Notifications (as they were)
    match /notifications/{notificationId} {
      allow read: if request.auth != null;
      allow write: if false; // By default, only backend can write
    }

    // User data (as it was)
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
