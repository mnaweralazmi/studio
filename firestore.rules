rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read for general data
    match /data/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // Allow any authenticated user to manage their own user document
    match /users/{userId} {
      allow read, update, delete, create: if request.auth.uid == userId;
    }
    
    // This wildcard match handles all other top-level collections 
    // (tasks, sales, expenses, debts, workers)
    match /{collection}/{docId} {
       // Check the ownerId field on the document for reads and writes
       allow read, update, delete: if request.auth.uid == resource.data.ownerId;
       // Check the ownerId field on the incoming document for creates
       allow create: if request.auth.uid == request.resource.data.ownerId;

       // Allow access to subcollections like payments or transactions
       match /{subCollection}/{subDocId} {
         allow read, write, delete, create: if request.auth.uid == get(/databases/$(database)/documents/$(collection)/$(docId)).data.ownerId;
       }
    }
  }
}
