rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read for general app data
    match /data/{document=**} {
      allow read: if true;
      allow write: if false; // Protect from client-side writes
    }
    
    // Secure all user-specific collections
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    match /tasks/{docId} {
      allow read, write: if request.auth.uid == request.resource.data.ownerId;
    }

    match /sales/{docId} {
      allow read, write: if request.auth.uid == request.resource.data.ownerId;
    }

    match /expenses/{docId} {
      allow read, write: if request.auth.uid == request.resource.data.ownerId;
    }

    match /debts/{docId} {
      allow read, write: if request.auth.uid == request.resource.data.ownerId;
    }

    match /workers/{docId} {
      allow read, write: if request.auth.uid == request.resource.data.ownerId;
    }
    
    // Allow users to manage their own subcollections within debts and workers
    match /debts/{debtId}/payments/{paymentId} {
       allow read, write: if get(/databases/$(database)/documents/debts/$(debtId)).data.ownerId == request.auth.uid;
    }
    
    match /workers/{workerId}/transactions/{transactionId} {
      allow read, write: if get(/databases/$(database)/documents/workers/$(workerId)).data.ownerId == request.auth.uid;
    }
  }
}
