rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and update their own user document
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // New user documents are created via Google Sign-In or Register pages, handled by server-side logic implicitly
      allow create: if request.auth != null;
    }

    // Topics can be read by any authenticated user
    // Topics can only be created by authenticated users
    // Topics can only be updated or deleted by their owner
    match /topics/{topicId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // Notifications can be read by the target user or all users if target is 'all'
    match /notifications/{notificationId} {
      allow read: if request.auth != null && (resource.data.target == 'all' || resource.data.target == request.auth.uid);
      // Notifications are typically created by admin/server-side logic
      allow create: if true; // Adjust as needed, for now allowing admin-like creation
    }

    // User-specific data (expenses, sales, tasks, etc.)
    // Users can only access their own data subcollections.
    match /users/{userId}/{subcollection}/{documentId} {
       allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
