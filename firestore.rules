rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to general app data (Topics)
    match /data/{topicId} {
      allow read: if true;
      allow write: if false; // Protect public data from client writes
    }
    
    // Allow users to access their own data securely
    match /users/{userId} {
      // Allow user to read/write their own document
      allow read, update, delete, create: if request.auth.uid == userId;
      
      // Allow access to all subcollections for the owner
      match /{subcollection}/{documentId=**} {
         allow read, write, delete, create: if request.auth.uid == userId;
      }
    }
  }
}
