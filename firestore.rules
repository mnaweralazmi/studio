rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, update, write: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    match /data/{document=**} {
      allow read: if true;
    }
    
    function isOwner(doc) {
      return request.auth.uid == doc.data.ownerId;
    }

    match /tasks/{taskId} {
      allow read, write: if isOwner(resource);
      allow create: if isOwner(request.resource);
    }
    
    match /completed_tasks/{taskId} {
       allow read, write: if isOwner(resource);
       allow create: if isOwner(request.resource);
    }

    match /{departmentId}_sales/{saleId} {
      allow read, write: if isOwner(resource);
      allow create: if isOwner(request.resource);
    }
    match /{departmentId}_expenses/{expenseId} {
      allow read, write: if isOwner(resource);
      allow create: if isOwner(request.resource);
    }
    match /{departmentId}_debts/{debtId} {
      allow read, write: if isOwner(resource);
      allow create: if isOwner(request.resource);
    }
    match /{departmentId}_workers/{workerId} {
      allow read, write: if isOwner(resource);
      allow create: if isOwner(request.resource);
    }

    match /archive_sales/{saleId} {
      allow read, write: if isOwner(resource);
      allow create: if isOwner(request.resource);
    }
    match /archive_expenses/{expenseId} {
      allow read, write: if isOwner(resource);
      allow create: if isOwner(request.resource);
    }
     match /archive_debts/{debtId} {
      allow read, write: if isOwner(resource);
      allow create: if isOwner(request.resource);
    }

  }
}
