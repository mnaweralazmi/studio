rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(data) {
      return request.auth.uid == data.ownerId;
    }
    
    // --- USERS ---
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // --- GENERAL DATA (Public) ---
    match /data/{document=**} {
      allow read: if true;
    }

    // --- FINANCIAL, TASKS, ARCHIVE (Owner-based) ---
    function ownerOnlyRules() {
      return {
        'read': isOwner(resource.data),
        'write': isOwner(resource.data),
        'create': isOwner(request.resource.data)
      };
    }
    
    match /agriculture_sales/{docId} { allow get, list, create, update, delete: if request.auth != null; }
    match /livestock_sales/{docId} { allow get, list, create, update, delete: if request.auth != null; }
    match /poultry_sales/{docId} { allow get, list, create, update, delete: if request.auth != null; }
    match /fish_sales/{docId} { allow get, list, create, update, delete: if request.auth != null; }
    
    match /agriculture_expenses/{docId} { allow get, list, create, update, delete: if request.auth != null; }
    match /livestock_expenses/{docId} { allow get, list, create, update, delete: if request.auth != null; }
    match /poultry_expenses/{docId} { allow get, list, create, update, delete: if request.auth != null; }
    match /fish_expenses/{docId} { allow get, list, create, update, delete: if request.auth != null; }
    
    match /agriculture_debts/{docId} { allow get, list, create, update, delete: if request.auth != null; }
    match /livestock_debts/{docId} { allow get, list, create, update, delete: if request.auth != null; }
    match /poultry_debts/{docId} { allow get, list, create, update, delete: if request.auth != null; }
    match /fish_debts/{docId} { allow get, list, create, update, delete: if request.auth != null; }
    
    match /agriculture_workers/{docId} { allow get, list, create, update, delete: if request.auth != null; }
    match /livestock_workers/{docId} { allow get, list, create, update, delete: if request.auth != null; }
    match /poultry_workers/{docId} { allow get, list, create, update, delete: if request.auth != null; }
    match /fish_workers/{docId} { allow get, list, create, update, delete: if request.auth != null; }

    match /tasks/{taskId} {
      allow get, list, create, update, delete: if request.auth != null;
    }
    
    match /completed_tasks/{docId} { allow get, list, create, update, delete: if request.auth != null; }
    match /archive_sales/{docId} { allow get, list, create, update, delete: if request.auth != null; }
    match /archive_expenses/{docId} { allow get, list, create, update, delete: if request.auth != null; }
    match /archive_debts/{docId} { allow get, list, create, update, delete: if request.auth != null; }
  }
}
