rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if request.auth.uid != null;
    }

    match /data/{topicId} {
        allow read: if true;
        allow write: if false; // Prevent client-side writes
    }
    
    match /tasks/{taskId} {
      allow read, write: if request.auth.uid == request.resource.data.ownerId;
    }

    match /completed_tasks/{taskId} {
       allow read, create: if request.auth.uid == request.resource.data.ownerId;
       allow update, delete: if false;
    }

    function canAccessDepartmentalData() {
      return request.auth.uid == request.resource.data.ownerId;
    }
    
    // --- Agriculture ---
    match /agriculture_sales/{docId} { allow read, write: if canAccessDepartmentalData(); }
    match /agriculture_expenses/{docId} { allow read, write: if canAccessDepartmentalData(); }
    match /agriculture_debts/{docId} { allow read, write: if canAccessDepartmentalData(); }
    match /agriculture_workers/{docId} { allow read, write: if canAccessDepartmentalData(); }
    
    // --- Livestock ---
    match /livestock_sales/{docId} { allow read, write: if canAccessDepartmentalData(); }
    match /livestock_expenses/{docId} { allow read, write: if canAccessDepartmentalData(); }
    match /livestock_debts/{docId} { allow read, write: if canAccessDepartmentalData(); }
    match /livestock_workers/{docId} { allow read, write: if canAccessDepartmentalData(); }

    // --- Poultry ---
    match /poultry_sales/{docId} { allow read, write: if canAccessDepartmentalData(); }
    match /poultry_expenses/{docId} { allow read, write: if canAccessDepartmentalData(); }
    match /poultry_debts/{docId} { allow read, write: if canAccessDepartmentalData(); }
    match /poultry_workers/{docId} { allow read, write: if canAccessDepartmentalData(); }

    // --- Fish ---
    match /fish_sales/{docId} { allow read, write: if canAccessDepartmentalData(); }
    match /fish_expenses/{docId} { allow read, write: if canAccessDepartmentalData(); }
    match /fish_debts/{docId} { allow read, write: if canAccessDepartmentalData(); }
    match /fish_workers/{docId} { allow read, write: if canAccessDepartmentalData(); }
    
    // --- Archive ---
    match /archive_sales/{docId} { allow read, create: if request.auth.uid == request.resource.data.ownerId; }
    match /archive_expenses/{docId} { allow read, create: if request.auth.uid == request.resource.data.ownerId; }
    match /archive_debts/{docId} { allow read, create: if request.auth.uid == request.resource.data.ownerId; }
  }
}
