rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isOwner(data) {
      return request.auth.uid == data.ownerId;
    }
  
    // Public data (agricultural topics) can be read by anyone
    match /data/{document=**} {
      allow read: if true;
    }

    // Users can read their own data, and update their own data
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
    }
    
    // Tasks
    match /tasks/{taskId} {
      allow read, write: if isOwner(resource.data);
      allow create: if isOwner(request.resource.data);
    }
    
    match /completed_tasks/{taskId} {
       allow read, write: if isOwner(resource.data);
       allow create: if isOwner(request.resource.data);
    }

    // Dynamic rule for all financial collections (sales, expenses, debts, workers)
    // This covers agriculture, livestock, poultry, fish
    match /{departmentId}_{collection}/{docId} {
      allow read, write: if isOwner(resource.data);
      allow create: if isOwner(request.resource.data);
    }
    
    // Dynamic rule for all archive collections
    match /archive_{collection}/{docId} {
       allow read, write: if isOwner(resource.data);
       allow create: if isOwner(request.resource.data);
    }
  }
}